<section id='details-page'>
  <article class='details-gage-title'>
    <h1>Details Page</h1>
  </article>
  <article class='details-page-card'>

    <article class='details-page-card-image'>
      <img src='/static/img/man.png' alt='details-image' />
    </article>

    <article class='details-page-card-content'>
      <p>Author: {{data.author.email}}</p>
      <h2>Headline: {{data.headline}}</h2>
      <h3>Company name: {{data.companyName}}</h3>
      <h4>Company description: {{data.companyDescription}}</h4>
      <h5>Location: {{data.location}}</h5>

      {{#if hasUser}}
        <article class='details-page-card-buttons'>
          {{#if userData.isOwner}}
            <a href='/ad/edit/{{data._id}}' class='btn-edit'>Edit</a>
            <a href='/ad/delete/{{data._id}}' class='btn-delete'>Delete</a>

          {{else}}
            {{#if userData.hasApplied}}
              <p class='already-applied'>You have already applied!</p>
            {{else}}
              <a href='/ad/apply/{{data._id}}' class='btn-apply'>Apply now!</a>
              <p class='applied-people'>Hurry up, {{data.numUsersApplied}} people have already applied.</p>
            {{/if}}
          {{/if}}
        </article>
      {{/if}}
    </article>

  </article>
</section>

{{#if userData.isOwner}}

  <section id='info-about-candidates'>
    <h2>Candidates for this ad:</h2>

    {{#if data.hasApplicants}}
      {{#each data.usersApplied}}
        <article class='info-about-candidates-card'>
          <h2>Email: {{email}}</h2>
          <h3>Description of the candidate's skills: {{skills}}</h3>
        </article>
      {{/each}}
    {{/if}}
  </section>
{{/if}}