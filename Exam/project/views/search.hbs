<form class='search' action='search' method='get'>
  <input type='search' name='search' value='' placeholder='Search email...' />
  <button type='submit' class='btn-search'>
    <img src='/static/img/search-icon.png' alt='search-icon' />
    Search
  </button>
</form>
{{#unless isDefault}}

  <section id='search-page'>

    <h2>Search result:</h2>
    <!--If there are a search matches, show each ad-->
    {{#if dataInfo.hasResault}}
      {{#each dataInfo.data}}
        <article class='search-page-result'>
          <p class='search-page-result-headline'>Headline: {{headline}}</p>
          <p class='search-page-result-companyName'>Company Name:
            {{companyName}}</p>
        </article>
      {{/each}}

      <!--If not show:-->
    {{else}}
      <article class='search-page-no-result'>
        <p class='search-page-no-result-message'>No match found.</p>
      </article>
    {{/if}}
  </section>
{{/unless}}